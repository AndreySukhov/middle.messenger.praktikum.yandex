.text {
  font-family: var(--fontPrimary);
  font-weight: 500;
}

.text--xl {
  font-size: 2.5rem;
}

.text--l {
  font-size: 1.25rem;
}

.text--m {
  font-size: 0.81rem;
}

.text--s {
  font-size: 0.8rem;
}

.text--bold {
  font-weight: 600;
}

.text--secondary {
  color: var(--textSecondary);
}

.text--white {
  color: var(--white);
}