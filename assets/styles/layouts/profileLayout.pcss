.profile-layout {
    display: grid;
    grid-template-columns: 64px 1fr;
    min-height: 100vh;
}

.profile-layout__aside {
    height: 100%;
}

.aside-clickable-area {
    display: flex;
    height: 100%;
    justify-content: center;
    align-items: center;
    border-right: var(--divider);
    background: var(--secondary);
    text-decoration: none;
    cursor: pointer
}