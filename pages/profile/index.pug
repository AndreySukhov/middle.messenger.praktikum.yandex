include ../../mixins/markupHelpers/circleWrap/index
include ../../mixins/markupHelpers/box/index

include ../../mixins/forms/formRow/index
include ../../mixins/forms/button/index
include ../../mixins/forms/input/index

include ../../mixins/markupHelpers/avatar/index

block content
  div.profile-layout
    aside.profile-layout__aside
      a(href="/index.pug").aside-clickable-area
        +circleWrap('primary', 28)
          include ../../assets/icons/arrow-left.svg
    div.profile-layout__main
      div.centered-layout
        +box(true)
          form.form
            +formRow()
              +avatar(130).tc
            +formRow()
              +input('Почта')(name="email", type="email")
            +formRow()
              +input('Логин')(name="login")
            +formRow()
              +input('Имя')(name="first_name")
            +formRow()
              +input('Фамилия')(name="second_name")
            +formRow()
              +input('Имя в чате')(name="display_name")
            +formRow()
              +input('Телефон')(name="display_name", type='tel')
            +formRow()
              div.button-row
                +button('Сохранить')(type="submit")
          +formRow(true)
            div.button-row
              +button('Изменить пароль', undefined, true)(href="/profile-password.pug")
            div.button-row
              +button('Выйти', 'warning', true)(type="button")





