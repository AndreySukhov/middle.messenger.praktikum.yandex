include ../../mixins/markupHelpers/box/index
include ../../mixins/forms/formRow/index
include ../../mixins/forms/input/index
include ../../mixins/forms/button/index

block content
  div.centered-layout.centered-layout--spaced
     +box(true, 'Регистрация')
        form.form
          +formRow()
            +input('Почта')(name="email", type="email")
          +formRow()
            +input('Логин')(name="login")
          +formRow()
            +input('Имя')(name="first_name")
          +formRow()
            +input('Фамилия')(name="second_name")
          +formRow()
            +input('Телефон')(name="phone", type="tel")
          +formRow()
            +input('Пароль')(name="password", type="password")
          +formRow()
            +input('Пароль еще раз')( type="password")
          +formRow(true)
            div.button-row
              +button('Зарегистрироваться')(type="submit")
            div.button-row
              +button('Войти', undefined, true)(href="/login.pug")
